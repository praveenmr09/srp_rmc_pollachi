<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_account_move_invoice_form" model="ir.ui.view">
            <field name="name">account.move.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='invoice_tab']" position="after">
                    <page string="Tax Summary" name="tax_summary">
                        <group>
                            <field name="invoice_tax_summary_ids" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="cgst_amount"/>
                                    <field name="sgst_amount"/>
                                    <field name="igst_amount"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>