<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ======== STOCK SCRAP REPORT WIZARD ======== -->
        <record id="view_stock_scrap_wizard_form" model="ir.ui.view">
            <field name="name">Stock Scrap Wizard form</field>
            <field name="model">stock.scrap.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <footer>
                            <button name="print_stock_scrap_report_pdf" type="object" string="PDF"
                                    class="btn btn-danger" icon="fa-file-pdf-o"/>
                            <!--                            <button name="print_product_excel_report" string="Excel"-->
                            <!--                                    type="object" default_focus="1" class="btn btn-success"-->
                            <!--                                    icon="fa-file-text"/>-->
                            <button string="Cancel" class="btn-default" special="cancel" icon="fa-times"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!--ACTION FOR STOCK SCRAP REPORT WIZARD-->
        <record id="stock_scarp_wizard_action" model="ir.actions.act_window">
            <field name="name">Inventory Scrap</field>
            <field name="res_model">stock.scrap.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="inventory_scrap_menu" name="Inventory Scrap Report" action="stock_scarp_wizard_action"
                  parent="stock.menu_warehouse_report" sequence="250"/>
    </data>
</odoo>
