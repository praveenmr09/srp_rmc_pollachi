<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--    PAPER FORMAT STOCK SCRAP REPORT PAPER FORMAT-->
    <record id="paper_format_stock_scrap_report_pdf" model="report.paperformat">
        <field name="name">Stock Scrap Pdf Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">35</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>

    <!--    STOCK SCRAP RECORD FORMAT-->
    <record id="record_stock_scrap_pdf" model="ir.actions.report">
        <field name="name">stock Scrap Pdf Report</field>
        <field name="model">stock.scrap.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_scrap_report.stock_scrap_pdf_template</field>
        <field name="report_file">inventory_scrap_report.stock_scrap_pdf_template</field>
        <field name="paperformat_id" ref="inventory_scrap_report.paper_format_stock_scrap_report_pdf"/>
    </record>

    <!--WORKING 2-->
    <template id="stock_scrap_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="watermark"
                     style="margin: 300px 80px 100px 150px;position:absolute;opacity:0.15;z-index:1000;transform:rotate(00deg);-webkit-transform:rotate(00deg);transform: rotate(-20deg);">
                    <img src='/web/binary/company_logo' style="width:600px"/>
                </div>
                <div align="center">
                    <h4>
                        <strong>
                            Stock Scrap Report
                        </strong>
                    </h4>
                </div>


                <table class="table table-sm table-borderless" style="border-color:white">
                    <tr style="vertical-align: bottom; padding: 0;margin: 0">
                        <td style="width:10%;border-color:white">
                            <span style="font-size: 16px;width:30%">
                                <b>Start Date</b>
                            </span>
                        </td>
                        <td style="width:1%;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:62%;border-color:white">
                            <span style="font-size:17px;"
                                  t-esc="datetime.datetime.strptime(form['start_date'], '%Y-%m-%d').strftime('%d-%m-%Y')"/>
                        </td>


                        <td style="width:15%;text-align:right;border-color:white">
                            <span style="font-size: 16px;padding-right:32px;">
                                <b>End Date</b>
                            </span>
                        </td>
                        <td style="width:1%;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:14%;border-color:white">
                            <span style="font-size:16px;"
                                  t-esc="datetime.datetime.strptime(form['end_date'], '%Y-%m-%d').strftime('%d-%m-%Y')"/>

                        </td>

                    </tr>

                    <tr style="vertical-align: top; padding: 0;">
                        <td style="width:10%;border-color:white">
                            <span style="font-size: 16px;width:30%;border-color:white">
                                <b>Generated By</b>
                            </span>
                        </td>
                        <td style="width:1%;;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:62%;font-size: 16px;border-color:white">
                            <span t-field="res_company.env.user.name"/>
                        </td>


                        <td style="width:15%;text-align:right;border-color:white">
                            <span style="font-size: 16px;">
                                <b>Generated On</b>
                            </span>
                        </td>
                        <td style="width:1%;;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:14%;font-size: 16px;border-color:white">
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                        </td>
                    </tr>
                </table>


                <table class="table table-sm table-bordered">
                    <thead style="color: white; background-color: #18449B; text-align: center;">
                        <t t-foreach="cols_heads" t-as="head">
                            <th class="text-center bg-secondary text-white">
                                <span t-esc="head"/>
                            </th>
                        </t>
                    </thead>

                    <tbody>
                        <t t-foreach="data" t-as="l">
                            <tr>
                                <td width="3%" class="padding_all tbottom ttop text-center">
                                    <span t-esc="l_index+1"/>
                                </td>

                                <t t-if="l.name">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>


                                <t t-if="l.origin">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.origin"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l.product_id.name">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.product_id.name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>


                                <t t-if="l.scrap_qty">
                                    <td class="padding_all" align="right">
                                        <span t-esc="'%.2f'% l.scrap_qty"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>


                            </tr>
                        </t>
                    </tbody>

                </table>


            </t>
        </t>
    </template>
</odoo>