<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--        PETTY CASH EXPENSE FORM SEQUENCE-->
        <record id="seq_petty_cash_expense" model="ir.sequence">
            <field name="name">petty.cash.expense.sequence</field>
            <field name="code">petty.cash.expense</field>
            <field name="prefix">PEXP/</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
            <field name="implementation">standard</field>
        </record>


        <!--       PETTY CASH EXPENSE FORM VIEW-->
        <record id="view_petty_cash_expense_form_view" model="ir.ui.view">
            <field name="name">petty.cash.expense.form</field>
            <field name="model">petty.cash.expense</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="confirm_payment" type="object" string="Confirm Payment"
                                class="oe_highlight" states="draft"/>

                        <button name="register_payment" type="object" string="Register Payment"
                                class="oe_highlight" states="confirm"/>

                        <button name="reconcile_payment" type="object" string="Reconcile Payment"
                                class="oe_highlight" states="process"/>

                        <button name="reset_to_draft" type="object" string="Reset To Draft"
                                class="oe_highlight"
                                states="confirm"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Requested" bg_color="bg-danger" states="process"/>
                        <widget name="web_ribbon" title="Approved" bg_color="bg-success" states="done"/>
                        <div>
                            <h1>
                                <field name="name" readonly="1" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                        </group>
                        <group>
                        </group>
                        <group>
                        </group>
                        <group>
                            <group>
                                <field name="employee_id" required="1" options="{'no_create':True, 'no_edit':True}"
                                       placeholder="Select Employee"/>
                                <field name="payment_journal" options="{'no_create':True, 'no_edit':True}"
                                       placeholder="Select Payment Journal"/>
                                <field name="petty_cash_journal" options="{'no_create':True, 'no_edit':True}"
                                       placeholder="Select Payment Cash Journal"/>
                            </group>
                            <group>
                                <field name="cash_expense_date"/>
                                <field name="user_id" options="{'no_create':True, 'no_edit':True}"/>
                                <field name="company_id" options="{'no_create':True, 'no_edit':True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="expense_lines" string="Expense Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="particulars"/>
                                        <field name="account"/>
                                        <field name="analytic_account"/>
                                        <field name="request_amount"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!--        PETTY CASH EXPENSE TREE VIEW-->
        <record model="ir.ui.view" id="view_petty_cash_expense_tree_view">
            <field name="name">petty.cash.expense.tree</field>
            <field name="model">petty.cash.expense</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="cash_expense_date"/>
                    <field name="petty_cash_journal"/>
                    <field name="state" decoration-success="(state in ('done'))"
                           decoration-info="(state in ('confirm'))"
                           decoration-danger="(state in ('process'))"
                           decoration-warning="(state in ('draft'))" widget="badge"/>
                </tree>
            </field>
        </record>

        <!--                   ACTION FOR PETTY CASH EXPENSE-->
        <record id="petty_cash_expense_action" model="ir.actions.act_window">
            <field name="name">Petty Cash Expense</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">petty.cash.expense</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_no content_smiling_face">
                    Create a New Petty Cash Expense
                </p>
            </field>
        </record>

        <!--        MENU ITEM FOR PETTY CASH EXPENSE-->
        <menuitem id="view_petty_cash_expense_sub_menu"
                  name="Petty Cash Expense"
                  parent="petty_cash_management.view_petty_cash_menu"
                  action="petty_cash_expense_action"/>


    </data>
</odoo>