                <table class="table table-sm table-bordered" style="border:1px solid black">
                    <thead style="color: solid black; background-color: #18449B;">
                        <tr>
                            <th class="text-center bg-secondary text-white">S.No</th>
                            <th class="text-center bg-secondary text-white">Vehicle</th>
                            <t t-foreach="cols_heads[2:-1]" t-as="month">
                                <th class="text-center bg-secondary text-white">
                                    <span t-esc="month"/>
                                </th>
                            </t>
                            <th class="text-center bg-secondary text-white">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="vehicle" t-as="l">
                            <tr>
                                <td width="3%" class="padding_all tbottom ttop text-center">
                                    <span t-esc="l_index+1"/>
                                </td>
                                <td class="padding_all tleft tbottom ttop text-left">
                                    <span t-esc="l.name"/>
                                </td>
                                <t t-foreach="cols_heads[2:-1]" t-as="month">

                                    <t t-if="data.get(l.name, {}).get(month)">
                                        <td class="padding_all" align="right">
                                            <span t-esc="data.get(l.name, {}).get(month)"/>
                                        </td>
                                    </t>

                                    <t t-else="">
                                        <td class="padding_all" align="center">
                                            <span>-</span>
                                        </td>
                                    </t>

                                </t>
                                <t t-if="data.get(l.name, {}).get('Total')">
                                    <td class="padding_all" align="right">
                                        <span t-esc="data.get(l.name, {}).get('Total')"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>
                            </tr>
                        </t>
                        <!-- Display overall monthly counts and total -->
                        <tr style="color: white; background-color: #C81F26;">
                            <td class="padding_all tleft tbottom ttop text-center" colspan="2">
                                <strong style="font-weight: bold;font-size: 20px;bg-secondary text-white">Sum</strong>
                            </td>
                            <t t-foreach="cols_heads[2:-1]" t-as="month">
                                <td class="padding_all" align="right"
                                    style="font-weight: bold;bg-secondary text-white">
                                    <span t-esc="overall_monthly_counts.get(month, '-')"/>
                                </td>
                            </t>
                            <td class="padding_all" align="right"
                                style="font-weight: bold;bg-secondary text-white">
                                <span t-esc="overall_total_count"/>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </t>
        </t>
    </template>

</odoo>
