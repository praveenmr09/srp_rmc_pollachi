<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paper_format_driver_history_vehicle_report_pdf" model="report.paperformat">
        <field name="name">Driver History Pdf Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">35</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>


    <record id="record_driver_history_pdf" model="ir.actions.report">
        <field name="name">Driver History PDF Report</field>
        <field name="model">driver.vehicle.history.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">apps_fleet_rental.driver_history_pdf_template</field>
        <field name="report_file">apps_fleet_rental.driver_history_pdf_template</field>
        <field name="paperformat_id" ref="apps_fleet_rental.paper_format_driver_history_vehicle_report_pdf"/>
    </record>

    <template id="driver_history_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="watermark"
                     style="margin: 180px 80px 100px 300px;position:absolute;opacity:0.15;z-index:1000;transform:rotate(00deg);-webkit-transform:rotate(00deg);transform: rotate(-20deg);">
                    <img src='/web/binary/company_logo' style="width:600px"/>
                </div>
                <div align="center">
                    <h4>
                        <strong>
                            Rental Vehicle Driver History Report
                        </strong>
                    </h4>
                </div>

                <div class="row">
                    <div class="col-6">
                        <span style="font-size: 16px;">
                            <b>Start Date</b>
                        </span>
                        <strong class="px-2">:</strong>
                        <span style="font-size:17px;"
                              t-esc="datetime.datetime.strptime(form['start_date'], '%Y-%m-%d').strftime('%d-%m-%Y')"/>

                    </div>
                    <div class="col-6">
                        <span style="font-size: 16px;">
                            <b>End Date</b>
                        </span>
                        <strong class="px-2">:</strong>
                        <span style="font-size:17px;"
                              t-esc="datetime.datetime.strptime(form['end_date'], '%Y-%m-%d').strftime('%d-%m-%Y')"/>

                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <span style="font-size: 16px;">
                            <b>Generated By</b>
                        </span>
                        <strong class="px-2">:</strong>
                        <span t-field="res_company.env.user.name"/>
                    </div>
                    <div class="col-6">
                        <span style="font-size: 16px;">
                            <b>Generated On</b>
                        </span>
                        <strong class="px-2">:</strong>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                    </div>
                </div>
                <br/>
                <table class="table table-sm table-bordered" style="border:1px solid black">
                    <thead style="color: solid black; background-color: #18449B;">
                        <t t-foreach="cols_heads" t-as="head">
                            <th class="text-center bg-secondary text-white">
                                <span t-esc="head"/>
                            </th>
                        </t>
                    </thead>

                    <tbody>
                        <t t-foreach="data" t-as="l">
                            <tr>
                                <td width="3%" class="padding_all tbottom ttop text-center">
                                    <span t-esc="l_index+1"/>
                                </td>

                                <t t-if="l['rental_date']">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span t-esc="l['rental_date']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td width="14%"
                                        class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>


                                <t t-if="l['source']">
                                    <td
                                            class="padding_all tleft tbottom ttop text-left">
                                        <span t-esc="l['source']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['destination']">
                                    <td
                                            class="padding_all tleft tbottom ttop text-left">
                                        <span t-esc="l['destination']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['driver_name']">
                                    <td
                                            class="padding_all tleft tbottom ttop text-left">
                                        <span t-esc="l['driver_name']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['reference']">
                                    <td
                                            class="padding_all tleft tbottom ttop text-left">
                                        <span t-esc="l['reference']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['purpose']">
                                    <td
                                            class="padding_all tleft tbottom ttop text-left">
                                        <span t-esc="l['purpose']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['vehicle_no']">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span t-esc="l['vehicle_no']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>


                                <t t-if="l['duration']">
                                    <td
                                            class="padding_all" align="right">
                                        <span t-esc="'%.2f' % l['duration']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['starting_km']">
                                    <td
                                            class="padding_all" align="right">
                                        <span t-esc="'%.2f' % l['starting_km']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['total_km']">
                                    <td
                                            class="padding_all" align="right">
                                        <span t-esc="'%.2f' % l['total_km']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>


                                <t t-if="l['rate_km']">
                                    <td
                                            class="padding_all" align="right">
                                        <span t-esc="l['symbol']"/>
                                        <!--                                        <span>₹</span>-->
                                        <span t-esc="'%.2f' % l['rate_km']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l['total_cost']">
                                    <td
                                            class="padding_all" align="right">
                                        <span t-esc="l['symbol']"/>
                                        <!--                                        <span>₹</span>-->
                                        <span t-esc="'%.2f' % l['total_cost']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td
                                            class="padding_all tleft tbottom ttop text-center">
                                        <span>-</span>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                    <body class="thead-light p-3 mb-2" style="text-align:right">
                        <th class="bg-secondary text-black;" colspan="12" style="font-weight:bold; text-align:right;">
                            <strong class="px-1" style="font-size:17px;">Total</strong>
                        </th>

                        <th class="bg-secondary text-black;">
                            <t t-if="l['total_subtotal']">
                                <span t-esc="l['symbol']"/>
                                <!--                                <span>₹</span>-->
                                <span t-esc="'%.2f' % l['total_subtotal']"/>
                            </t>

                            <t t-else="">
                                <span>-</span>
                            </t>
                        </th>
                    </body>

                </table>

            </t>
        </t>
    </template>
</odoo>
