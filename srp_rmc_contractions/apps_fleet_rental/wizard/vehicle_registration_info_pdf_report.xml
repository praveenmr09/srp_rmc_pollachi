<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paper_format_vehicle_registration_report_pdf" model="report.paperformat">
        <field name="name">Vehicle Registration Pdf Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="record_vehicle_registration_pdf" model="ir.actions.report">
        <field name="name">Vehicle Registration Pdf Report</field>
        <field name="model">vehicle.registration.info.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">apps_fleet_rental.vehicle_registration_pdf_template</field>
        <field name="report_file">apps_fleet_rental.vehicle_registration_pdf_template</field>
        <field name="paperformat_id" ref="apps_fleet_rental.paper_format_vehicle_registration_report_pdf"/>
    </record>

    <!--WORKING 2-->
    <template id="vehicle_registration_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <div class="watermark"
                     style="margin: 180px 80px 100px 300px;position:absolute;opacity:0.15;z-index:1000;transform:rotate(00deg);-webkit-transform:rotate(00deg);transform: rotate(-20deg);">
                    <img src='/web/binary/company_logo' style="width:600px"/>
                </div>
                <div align="center">
                    <h4>
                        <strong>
                            Vehicle Registration
                        </strong>
                    </h4>
                </div>


                <table class="table table-sm table-borderless" style="border-color:white">
                    <tr style="vertical-align: bottom; padding: 0;margin: 0">
                        <td style="width:10%;;border-color:white">
                            <span style="font-size: 16px;width:30%">
                                <b>Vehicle Category</b>
                            </span>
                        </td>
                        <td style="width:1%;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:62%;border-color:white">
                            <span style="font-size:17px;" t-esc="form['vehicle_category_id']"/>
                        </td>
                    </tr>

                    <tr style="vertical-align: top; padding: 0;">
                        <td style="width:10%;border-color:white">
                            <span style="font-size: 16px;width:30%;border-color:white">
                                <b>Generated By</b>
                            </span>
                        </td>
                        <td style="width:1%;;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:62%;font-size: 16px;border-color:white">
                            <span t-field="res_company.env.user.name"/>
                        </td>


                        <td style="width:15%;text-align:right;border-color:white">
                            <span style="font-size: 16px;">
                                <b>Generated On</b>
                            </span>
                        </td>
                        <td style="width:1%;;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:14%;font-size: 16px;border-color:white">
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                        </td>

                    </tr>

                </table>


                <table class="table table-sm table-bordered">
                    <thead style="color: white; background-color: #18449B; text-align: center;">
                        <t t-foreach="cols_heads" t-as="head">
                            <th class="text-center bg-secondary text-white">
                                <span t-esc="head"/>
                            </th>
                        </t>
                    </thead>
                    <tbody>
                        <t t-foreach="data" t-as="d">
                            <tr class="text-center"
                                style="color: white; background-color: #C81F26;">
                                <td colspan="11">
                                    <span t-esc="list(d.keys())[0]"/>
                                </td>
                            </tr>
                            <t t-if="d[str(list(d.keys())[0])]">
                                <t t-foreach="d[str(list(d.keys())[0])]" t-as="l">


                                    <tr>
                                        <td width="3%" class="padding_all tbottom ttop text-center">
                                            <span t-esc="l_index+1"/>
                                        </td>
                                        <td class="padding_all tleft tbottom ttop text-left">
                                            <span t-esc="l.name"/>
                                        </td>

                                        <t t-if="l.model_id.brand_id.name">
                                            <td class="padding_all" align="left">
                                                <span t-esc="l.model_id.brand_id.name"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.registration_date">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.registration_date"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.fc_expiry_date">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.fc_expiry_date"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.permit_expiry_date">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.permit_expiry_date"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.insurance_expiry_date">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.insurance_expiry_date"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.national_permit_expiry_date">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.national_permit_expiry_date"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.tn_permit_expiry_date">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.tn_permit_expiry_date"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.pollution_expiry_date_1">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.pollution_expiry_date_1"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>

                                        <t t-if="l.pollution_expiry_date_2">
                                            <td class="padding_all" align="center">
                                                <span t-esc="l.pollution_expiry_date_2"/>
                                            </td>
                                        </t>

                                        <t t-else="">
                                            <td class="padding_all" align="center">
                                                <span>-</span>
                                            </td>
                                        </t>


                                    </tr>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>


            </t>
        </t>
    </template>

</odoo>