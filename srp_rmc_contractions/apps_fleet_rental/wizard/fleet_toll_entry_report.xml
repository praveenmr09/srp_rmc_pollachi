<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--        FLEET TOLL ENTRY REPORT PAPER FORMAT-->
    <record id="view_fleet_toll_entry_paper_format" model="report.paperformat">
        <field name="name">Fleet Toll Entry Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>


    <record id="view_fleet_toll_entry_report_record_menu" model="ir.actions.report">
        <field name="name">Toll Entry</field>
        <field name="model">fleet.toll.entry</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">apps_fleet_rental.view_fleet_toll_entry_report_template</field>
        <field name="report_file">apps_fleet_rental.view_fleet_toll_entry_report_template</field>
        <field name="paperformat_id" ref="apps_fleet_rental.view_fleet_toll_entry_paper_format"/>
    </record>

    <!--WORKING 2-->
    <template id="view_fleet_toll_entry_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <div class="watermark"
                     style="margin: 180px 80px 100px 300px;position:absolute;opacity:0.15;z-index:1000;transform:rotate(00deg);-webkit-transform:rotate(00deg);transform: rotate(-20deg);">
                    <img src='/web/binary/company_logo' style="width:600px"/>
                </div>
                <div align="center">
                    <h4>
                        <strong>
                            Toll Entry
                        </strong>
                    </h4>
                </div>


                <table class="table table-sm table-borderless" style="border-color:white">
                    <tr style="vertical-align: bottom; padding: 0;margin: 0">
                        <td style="width:10%;;border-color:white">
                            <span style="font-size: 16px;width:30%">
                                <b>Start Date</b>
                            </span>
                        </td>
                        <td style="width:1%;border-color:white">
                            <strong>:</strong>
                        </td>

                        <t t-if="form['start_date']">
                            <td style="width:62%;border-color:white">
                                <span style="font-size:17px;"
                                      t-esc="datetime.datetime.strptime(form['start_date'], '%Y-%m-%d').strftime('%d-%m-%Y')"/>
                            </td>
                        </t>
                        <t t-else="">
                            <td style="width:62%;border-color:white"
                                class="padding_all tleft tbottom ttop text-right">
                                <span>-</span>
                            </td>
                        </t>


                        <td style="width:15%;text-align:right;border-color:white">
                            <span style="font-size: 16px;padding-right:32px;">
                                <b>End Date</b>
                            </span>
                        </td>
                        <td style="width:1%;border-color:white">
                            <strong>:</strong>
                        </td>

                        <t t-if="form['end_date']">
                            <td style="width:14%;border-color:white">
                                <span style="font-size:16px;"
                                      t-esc="datetime.datetime.strptime(form['end_date'], '%Y-%m-%d').strftime('%d-%m-%Y')"/>

                            </td>
                        </t>
                        <t t-else="">
                            <td style="width:14%;border-color:white"
                                class="padding_all tleft tbottom ttop text-right">
                                <span>-</span>
                            </td>
                        </t>
                    </tr>

                    <tr style="vertical-align: top; padding: 0;">
                        <td style="width:10%;border-color:white">
                            <span style="font-size: 16px;width:30%;border-color:white">
                                <b>Generated By</b>
                            </span>
                        </td>
                        <td style="width:1%;;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:62%;font-size: 16px;border-color:white">
                            <span t-field="res_company.env.user.name"/>
                        </td>


                        <td style="width:15%;text-align:right;border-color:white">
                            <span style="font-size: 16px;">
                                <b>Generated On</b>
                            </span>
                        </td>
                        <td style="width:1%;;border-color:white">
                            <strong>:</strong>
                        </td>
                        <td style="width:14%;font-size: 16px;border-color:white">
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                        </td>
                    </tr>
                </table>


                <table class="table table-sm table-bordered">
                    <thead style="color: white; background-color: #18449B; text-align: center;">
                        <t t-foreach="cols_heads" t-as="head">
                            <th class="text-center bg-secondary text-white">
                                <span t-esc="head"/>
                            </th>
                        </t>
                    </thead>

                    <tbody>
                        <t t-foreach="data" t-as="l">
                            <tr>
                                <td width="3%" class="padding_all tbottom ttop text-center">
                                    <span t-esc="l_index+1"/>
                                </td>


                                <t t-if="l.rent_contract_ref">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.rent_contract_ref"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>


                                <t t-if="l.entry_date">
                                    <td width="14%" class="padding_all" align="center">
                                        <span t-esc="l.entry_date.strftime('%d-%m-%Y')"/>,
                                        <span t-esc="l.entry_date.astimezone(local_timezone).strftime('%I:%M %p')"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td width="14%" class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l.entry_name">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.entry_name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l.exit_name">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.exit_name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l.distance">
                                    <td class="padding_all" align="right">
                                        <span t-esc="l.distance"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l.cost_amount">
                                    <td width="10%" class="padding_all" align="right">
                                        <t t-esc="l.vehicle_id.company_id.currency_id.symbol"/>
                                        <span t-esc="'%.2f'% l.cost_amount"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td width="10%" class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l.vehicle_id">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.vehicle_id.name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>


                                <t t-if="l.driver_id">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.driver_id.name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

                                <t t-if="l.vendor_id">
                                    <td class="padding_all" align="left">
                                        <span t-esc="l.vendor_id.name"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="padding_all" align="center">
                                        <span>-</span>
                                    </td>
                                </t>

<!--                                <t t-if="l.inv_ref">-->
<!--                                    <td class="padding_all" align="left">-->
<!--                                        <span t-esc="l.inv_ref"/>-->
<!--                                    </td>-->
<!--                                </t>-->
<!--                                <t t-else="">-->
<!--                                    <td class="padding_all" align="center">-->
<!--                                        <span>-</span>-->
<!--                                    </td>-->
<!--                                </t>-->
                            </tr>
                        </t>
                    </tbody>
                    <body class="thead-light p-3 mb-2" style="text-align:right">
                        <th class="bg-secondary text-black;" colspan="6" style="font-weight:bold; text-align:right;">
                            <strong class="px-1" style="font-size:17px;">Total</strong>
                        </th>

                        <th class="bg-secondary text-black;" colspan="4" style="text-align:left;">
                            <t t-set="total_cost_amount" t-value="0.0"/>
                            <t t-foreach="data" t-as="l">
                                <t t-if="l.cost_amount">
                                    <t t-set="total_cost_amount" t-value="total_cost_amount + l.cost_amount"/>
                                </t>
                            </t>

                            <t t-if="total_cost_amount">
                                <t t-esc="l.vehicle_id.company_id.currency_id.symbol"/>
                                <span t-esc="'%.2f' % total_cost_amount"/>
                            </t>

                            <t t-else="">
                                <span>-</span>
                            </t>
                        </th>
                    </body>
                </table>
            </t>
        </t>
    </template>
</odoo>

