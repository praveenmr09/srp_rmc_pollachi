<?xml version="1.0" ?>
<odoo>
    <data>
        <!--   FLEET TOLL ENTRY WIZARD FORM VIEW-->
        <record id="view_fleet_toll_entry_wizard_form_view" model="ir.ui.view">
            <field name="name">fleet.toll.entry.wizard.form</field>
            <field name="model">fleet.toll.entry.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="vehicle_id"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="driver_id"
                                   options="{'no_open': True,'no_create':True, 'no_edit':True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_fleet_toll_entry" class="btn btn-danger" icon="fa-file-pdf-o"
                                string="PDF Report"
                                type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel" icon="fa-times"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--ACTION FOR FLEET TOLL ENTRY WIZARD-->
        <record id="view_fleet_toll_entry_wizard_action" model="ir.actions.act_window">
            <field name="name">Toll Entry</field>
            <field name="res_model">fleet.toll.entry.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!--  MENU FOR VEHICLE REGISTRATION INFO WIZARD -->
        <menuitem action="view_fleet_toll_entry_wizard_action"
                  id="menu_fleet_toll_entry_wizard_report"
                  name="Toll Entry Report"
                  parent="fleet.menu_fleet_reporting" sequence="47"/>
    </data>
</odoo>
