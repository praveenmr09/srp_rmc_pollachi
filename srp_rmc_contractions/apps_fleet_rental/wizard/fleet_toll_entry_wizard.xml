<?xml version="1.0" ?>
<odoo>
    <data>
        <!--   FLEET TOLL ENTRY WIZARD FORM VIEW-->
        <record id="view_fleet_toll_entry_wizard_form_view" model="ir.ui.view">
            <field name="name">fleet.toll.entry.wizard.form</field>
            <field name="model">fleet.toll.entry.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group string="Fleet Toll Details">
                            <field name="rent_contract_ref" readonly="1" force_save="1"/>
                            <field name="entry_date"/>
                            <field name="entry_name"/>
                            <field name="exit_name"/>
                            <field name="distance"/>
                            <field name="cost_amount"/>
                        </group>
                        <group string="Vehicle Details">
                            <field name="vehicle_id" readonly="1" force_save="1"/>
                            <separator string="Additional Details"/>
                            <field name="purchaser_id"/>
                            <field name="vendor_id"/>
                            <field name="inv_ref"/>
                        </group>
                    </group>
                    <footer>
                        <button name="update_toll_entry_details_" string="Generate Toll Entry" icon="fa-road"
                                type="object" default_focus="1" class="btn btn-success"/>
                        <!--                        <button name="add_fuel_in_rental_contract" string="Add Fuel" icon="fa-fire-extinguisher"-->
                        <!--                                type="object" default_focus="1" class="btn btn-success"-->
                        <!--                                attrs="{'invisible': [('hide_status', '=', 'hide_in_fleet_vehicle')]}"/>-->
                        <button string="Cancel" class="btn-default" special="cancel" icon="fa-times"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--ACTION FOR FLEET TOLL ENTRY WIZARD-->
        <record id="view_fleet_toll_entry_wizard_action" model="ir.actions.act_window">
            <field name="name">Toll Entry</field>
            <field name="res_model">fleet.toll.entry.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
