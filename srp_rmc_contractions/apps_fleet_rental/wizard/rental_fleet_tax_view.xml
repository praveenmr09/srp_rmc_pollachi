<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- create a wizard for get invoice options to generate the rental trip invoice-->
    <record id="view_rent_invoice_options_form" model="ir.ui.view">
        <field name="name">rent.invoice.options.form</field>
        <field name="model">rent.invoice.options</field>
        <field name="arch" type="xml">
            <form string="Update Tax Options">
                <seperator string="Select Invoice with Include or Exclude Tax Options!!!..."/>
                <group>
                    <group>
                        <field name="rent_contract_ref" readonly='1' force_save="1"/>
                        <field name="partner_id" readonly='1' force_save="1"/>
                        <field name="mobile" readonly='1' force_save="1"/>
                    </group>
                    <group>
                        <field name="tax_options" required="1" widget="radio" options="{'horizontal': true}"/>
                        <field name="journal_id" readonly='1' force_save="1"/>
                    </group>
                </group>
                <footer>
                    <button string='Create Invoice' name='create_regular_tax_invoice' type='object'
                            class='btn-primary'/>
                    <button string='Cancel' class='btn-default' special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--    WIZARD FORM FOR RENT Invoice Options-->
    <record id="open_rent_invoice_options_action" model="ir.actions.act_window">
        <field name="name">Rental Tax Options</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rent.invoice.options</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_rent_invoice_options_form"/>
    </record>
</odoo>



