<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>


        <!--   HR PAYSLIP EXTENDED-->
        <record id="view_hr_payslip_form_inherited" model="ir.ui.view">
            <field name="name">hr.payslip.form.inherited</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="om_hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="after">
                    <group>
                        <group string="Employee Attendance Info">
                            <field name="employee_present_days" readonly="0" force_save="1"/>
                            <field name="number_of_leave" readonly="1" force_save="1"/>
<!--                            <field name="leave_paid_timeoff" readonly="1" force_save="1"/>-->
<!--                            <field name="employee_balance_days" invisible="0" readonly="1" force_save="1"/>-->
                            <field name="employee_final_present_days" force_save="1" readonly="1"/>
                            <field name="allowance_amount_total" force_save="1" readonly="1" invisible="1"/>
                            <field name="allowance_amount_deduction" force_save="1" readonly="1"/>
                        </group>
                        <group string="Working Days Info">
                            <field name="employee_loptotal_days" invisible="0" readonly="1" force_save="1"/>
                            <field name="employee_final_lop_total_days" invisible="0" readonly="1" force_save="1"/>
                            <field name="employee_one_day_salary" readonly="1" force_save="1" invisible="0"/>
                            <field name="unpaid_deduction" readonly="1" force_save="1" invisible="1"/>
                            <field name="number_working_of_days" readonly="1" force_save="1"/>
                            <field name="total_days_of_month" readonly="1" force_save="1" invisible="0"/>
                        </group>
                        <group>

                        </group>
                        <group string="Incentives">
                            <field name="weekly_incentive" force_save="1"/>
                            <field name="monthly_incentive" force_save="1"/>
                            <field name="special_incentive" force_save="1"/>
                            <field name="gross_amount" force_save="1" invisible="1"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
