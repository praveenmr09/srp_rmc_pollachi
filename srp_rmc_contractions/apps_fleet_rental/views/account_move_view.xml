<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    INHERIT ACCOUNT MOVE-->
    <record id="view_move_form_inherited" model="ir.ui.view">
        <field name="name">account.move.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="payment_reference" position="after">
                <field name="transport_mode"/>
                <field name="vehicle_id"/>
                <!--                <field name="place_of_supply"/>-->
                <field name="date_of_supply"/>
            </field>
            <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='account_id']" position="before">
                <field name="trips_starts_from"/>
                <field name="trips_ends_at"/>
                <field name="duration"/>
                <!--                <field name="rate_per_km"/>-->
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='quantity']" position="attributes">
                <attribute name="string">Total/KM</attribute>
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='price_unit']" position="attributes">
                <attribute name="string">Rate/KM</attribute>
            </xpath>
        </field>
    </record>
</odoo>
